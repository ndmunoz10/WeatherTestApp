<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Text Themes -->

    <style name="HeaderText">
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">@dimen/caption_size</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">@dimen/body_size</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ItemHeaderText">
        <item name="android:textSize">@dimen/item_header_size</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ItemBodyText">
        <item name="android:textSize">@dimen/item_body_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="ItemCaptionText">
        <item name="android:textSize">@dimen/caption_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="AccentedText">
        <item name="android:textSize">@dimen/accented_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <!-- Specific Themes -->

    <style name="HeaderText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentedText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CaptionText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemHeaderText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemBodyText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemCaptionText.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

</resources>