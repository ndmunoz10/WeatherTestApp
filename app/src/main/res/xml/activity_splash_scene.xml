<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1500">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="0"
               android:scaleX="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="0"
               android:scaleY="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="20"
               android:scaleX="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="20"
               android:scaleY="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="40"
               android:scaleX="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="40"
               android:scaleY="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="100"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="100"
               android:scaleY="50" />
           <KeyAttribute
               motion:motionTarget="@+id/ivSplashIcon"
               motion:framePosition="100"
               android:scaleX="50" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>